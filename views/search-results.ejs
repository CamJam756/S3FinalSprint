<!-- src/views/search-results.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Search Results</title>
</head>
<body>
  <h1>Search Results</h1>

  <% if (results.length > 0) { %>
    <ul>
      <% results.forEach(result => { %>
        <li>
          Make: <%= result.make %><br>
          Model: <%= result.model %><br>
          Year: <%= result.year %><br>
          Colour: <%= result.colour %><br>
          Mileage: <%= result.mileage %><br>
          VIN: <%= result.vin %>
        </li>
      <% }); %>
    </ul>
  <% } else { %>
    <p>No results found.</p>
  <% } %>

  <!-- Add styling or additional content as needed -->
</body>
</html>
